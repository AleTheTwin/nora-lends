generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id       String @id @default(uuid())
  username String @unique
  password String
}

model Persona {
  id       String   @id @default(uuid())
  username String   @unique
  password String
  email    String   @unique
  nombre   String
  notas    Nota[]
  eventos  Evento[]
}

model Nota {
  id        String  @id @default(uuid())
  titulo    String
  contenido String
  autorId   String
  autor     Persona @relation(references: [id], fields: [autorId])
  eventoId  String
  evento    Evento  @relation(fields: [eventoId], references: [id])
}

model Evento {
  id                  String   @id @default(uuid())
  titulo              String
  fechaDeInicio       DateTime
  fechaDeFinalizacion DateTime
  autorId             String
  notas               Nota[]
  autor               Persona  @relation(references: [id], fields: [autorId])
}
